<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/llRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/greyListBG"
        android:padding="@dimen/default_margin">
        <ImageView
            android:layout_width="@dimen/margin_top70"
            android:layout_height="@dimen/margin_extra_large60"
            android:src="@drawable/logo_autuplus" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin_half5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Du riffi pour Tesla Motors"
                android:textColor="@color/langBG"
                android:textSize="@dimen/normal_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="@string/descriptionMapDetails"
                android:textColor="@color/langBG"
                android:textSize="@dimen/normal_text_minus" />

        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/llRow"
        android:background="@android:color/white" />
</RelativeLayout>