<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/greyListBG"
    android:padding="@dimen/default_margin">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/langBG"
        android:textSize="@dimen/normal_text_minus"
        android:maxLines="1"
        android:maxLength="20"
        android:text="BMW" />

    <ImageView
        android:id="@+id/ivDateEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/shape" />

    <TextView
        android:id="@+id/tvAddress"
        android:text="Street xyz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignBottom="@+id/ivDateEvent"
        android:layout_toLeftOf="@+id/ivDateEvent"
        android:layout_toStartOf="@+id/ivDateEvent"
        android:layout_marginRight="@dimen/default_margin_large"
        android:layout_marginEnd="@dimen/default_margin_large"
        android:maxLines="1"
        android:maxLength="32"
        android:textColor="@color/langBG"
        android:textSize="@dimen/smallest_text"/>

</RelativeLayout>