<resources>

    <!-- Base application theme. -->
    <style name="manaco_apptheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Theme.MyDialog" parent="@android:style/Theme.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:textColor">@color/langBG</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@color/colorAccent</item>
        <item name="android:bottomDark">@color/colorAccent</item>
        <item name="android:bottomMedium">@color/colorAccent</item>
        <item name="android:centerBright">@color/colorAccent</item>
        <item name="android:centerDark">@color/colorAccent</item>
        <item name="android:centerMedium">@color/colorAccent</item>
        <item name="android:fullBright">@color/colorAccent</item>
        <item name="android:fullDark">@color/colorAccent</item>
        <item name="android:topBright">@color/colorAccent</item>
        <item name="android:topDark">@color/colorAccent</item>
    </style>

    <style name="Custom" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">@string/loading</item>
        <item name="DialogSpotColor">@android:color/white</item>
<!--        <item name="DialogSpotColor">@android:color/holo_orange_dark</item>-->
        <item name="DialogSpotCount">8</item>
    </style>

</resources>
